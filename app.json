{
  "expo": {
    "name": "PlantDecor",
    "slug": "plantdecor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D6A4F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.plantdecor.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D6A4F"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.plantdecor.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "PlantDecor cần truy cập thư viện ảnh để chọn ảnh không gian cho AI thiết kế.",
          "cameraPermission": "PlantDecor cần truy cập camera để chụp ảnh không gian."
        }
      ]
    ]
  }
}
